{
    "name": "${environmentName}",
    "description": "Apache Brooklyn",
    "version": "1.0.0",
    "author": "https://github.com/absidish",
    "containers": [
        {
            "hostname": "mate",
            "template": "debian-stretch",
            "peer-criteria": "MATE-GROUP",
            "size": "${containerSize}"
        }
    ],
    "peer-criteria": [
        {
            "name": "MATE-GROUP",
            "max-price": "25"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/absidish/app1/archive/master.zip",
        "ansible-playbook": "site.yml",
        "groups": [
            {
                "name": "mate",
                "hostnames": [
                    "mate"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "wp",
            "validation": "[a-zA-Z0-9]+"
        },
         "testmessage": {
            "description": "Enter the test message",
            "type": "string",
            "default": "wp",
            "validation": "[a-zA-Z0-9]+"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "MEDIUM",
            "validation": "MEDIUM,LARGE,HUGE"
        }
    }
}
