{
  "name": "${environmentName}",
  "description": "Apache Brooklyn",
  "version": "1.0.0",
  "author": "https://github.com/absidish",
  "containers": [
    {
      "hostname": "brooklyn",
      "template": "debian-stretch",
      "peer-criteria": "usualgroup",
      "size": "${containerSize}",
      "port-mapping": [
        {
          "protocol": "https",
          "domain": "${domainName}",
          "internal-port": "80",
          "external-port": "443"
        }
      ]
    },
    {
      "hostname": "target",
      "template": "debian-stretch",
      "peer-criteria": "cluster",
      "size": "${targetContainerSize}",
      "peer-layout": "layout1"
    }
  ],
  "peer-criteria": [
    {
      "name": "usualgroup"
    },
       {
      "name": "cluster"
    }
  ],
  "peer-layouts": [
    {
      "name": "layout1",
      "peer-count": "${peerCount}",
      "container-per-peer": "${containerPerPeerCount}"
    }
  ],
  "ansible-configuration": {
    "source-url": "https://github.com/absidish/app1/archive/master.zip",
    "ansible-playbook": "site.yml",
    "groups": [
      {
        "name": "brooklyn-server",
        "hostnames": [
          "brooklyn"
        ]
      },
      {
        "name": "targets",
        "hostnames": [
          "target"
        ]
      }
    ]
  },
  "user-variables": {
    "environmentName": {
      "description": "Enter the environment name",
      "type": "string",
      "default": "ApacheBrooklyn",
      "validation": "[a-zA-Z0-9]+"
    },
    "peerCount": {
      "description": "peer count",
      "type": "int",
      "default": "1",
      "validation": "\\d+"
    },
    "containerPerPeerCount": {
      "description": "Container per peer Count",
      "type": "int",
      "default": "1",
      "validation": "\\d+"
    },
    "domainName": {
      "description": "Enter the application domain name",
      "type": "domain",
      "default": "change.the.domain",
      "validation": "[a-zA-Z0-9]+"
    },
    "targetContainerSize": {
      "description": "Container Size",
      "type": "enum",
      "default": "SMALL",
      "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
    },
    "containerSize": {
      "description": "Container Size",
      "type": "enum",
      "default": "SMALL",
      "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
    }
  }
}
