{
  "name": "SubutaiAnsible",
  "description": "Environment configuration test blueprint",
  "foobar": {
    "description": "just a test",
    "type": "enum",
    "default": "CAT",
    "validation": "BAT,CAT,RAT,COW,DOG"
  },
  "containerType": {
    "description": "you can set TINY,SMALL,MEDIUM,LARGE,HUGE",
    "type": "enum",
    "default": "SMALL",
    "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
  },
  "nodes": [
    {
      "name": "backup-server",
      "template": "ubuntu16",
      "peer_group": "HTTP-GROUP",
      "size": "${containerType}",
    },
      {
      "name": "backup-server",
      "template": "ubuntu16",
      "peer_group": "HTTP-GROUP",
      "size": "${foobar}",
    }
  ],
  "peerGroups": [
    {
      "name": "HTTP-GROUP",
      "pricingPref": {
        "maxPrice": "500"
      }
    }
  ],
  "sshKey": "root",
  "configuration": {
    "playbook": "https://github.com/platium/app1/archive/master.zip",
    "script": "main.yml",
    "groups": [
      {
        "name": "db",
        "nodes_name": [
          "backup-server"
        ]
      }
    ]
  }
}
