{
  "name": "${environmentName}",
  "description": "test",
  "version": "1.0.0",
  "author": "https://github.com/absidish",
  "containers": [
    {
      "hostname": "apache",
      "template": "ofbiz-final@sydyk",
      "peer-criteria": "gr1",
      "size": "${containerSize}",
      "peer-layout": "d2"
    }
  ],
  "peer-layouts": [
    {
      "name": "d2",
      "peer-count": "${peerCount}",
      "container-per-peer": "${containerPerPeerCount}"
    }
  ],
  "peer-criteria": [
    {
      "name": "gr1"
    }
  ],
  "ansible-configuration": {
    "source-url": "https://github.com/absidish/app1/archive/master.zip",
    "ansible-playbook": "main.yml",
    "extra-vars": [
      
    ],
    "groups": [
      {
        "name": "servers",
        "hostnames": [
          "apache"
        ]
      }
    ]
  },
  "user-variables": {
    "environmentName": {
      "description": "Enter the environment name",
      "type": "string",
      "default": "cluster",
      "validation": "[a-zA-Z0-9]+"
    },
    "domain": {
      "description": "Enter the application domain name",
      "type": "domain",
      "default": "change.the.domain",
      "validation": "[a-zA-Z0-9]+"
    },
    "containerPerPeerCount": {
      "description": "Containers per peer count",
      "type": "int",
      "default": "1",
      "validation": "[0-9]+"
    },
    "peerCount": {
      "description": "peer count",
      "type": "int",
      "default": "1",
      "validation": "[0-9]+"
    },
    "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "SMALL",
            "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
        }
  }
}
